{
  "name": "chat-app-backend",
  "version": "1.0.0",
  "description": "Full-stack chat application backend with GraphQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npx prisma generate",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:reset": "prisma db push --force-reset",
    "db:studio": "prisma studio",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "keywords": [
    "graphql",
    "apollo",
    "chat",
    "websocket",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@types/ws": "^8.5.5",
    "prisma": "^5.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@apollo/subgraph": "^2.5.6",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "graphql": "^16.7.1",
    "graphql-scalars": "^1.22.2",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.14.0",
    "jsonwebtoken": "^9.0.1",
    "mongodb": "^6.20.0",
    "ws": "^8.13.0"
  }
}
